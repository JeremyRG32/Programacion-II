@model List<ProductViewModel>

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>
<a asp-controller="Products" asp-action="Create" class="btn btn-success">Add Product</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Price</td>
                <td>
                    <a asp-controller="Products" asp-action="Edit" asp-route-id="@p.Id" class="btn btn-primary mx-0">Edit</a>
                    <a asp-controller="Products" asp-action="Delete" asp-route-id="@p.Id" class="btn btn-danger mx-0">Delete</a>


                </td>
            </tr>
        }
    </tbody>
</table>
