@model ProductViewModel

@{
    ViewData["Title"] = "Edit Product";
}
<h2>Delete Product</h2>
<form asp-action="DeleteConfirm" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" readonly required />
    </div>
    <div class="form-group">
        <label>Price</label>
        <input asp-for="Price" type="number" class="form-control" readonly required />
    </div>
    <br />
    <button type="submit" class="btn btn-danger">Confirm</button>
    <a asp-action="Index" class="btn btn-secondary">Return</a>
</form>
