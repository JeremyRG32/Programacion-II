@model CustomerViewModel

<h2>Delete Customer</h2>
<form asp-action="DeleteConfirm" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" readonly required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" readonly required />
    </div>
    <br />
    <button type="submit" class="btn btn-danger">Confirm</button>
    <a asp-action="Index" class="btn btn-secondary">Return</a>
</form>